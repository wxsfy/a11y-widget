{
  "name": "a11y-widget",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && npm run build:iife && npm run build:esm",
    "build:iife": "esbuild a11y-widget.v0.3.js --bundle --minify --sourcemap --format=iife --outfile=dist/a11y-widget.min.js",
    "build:esm": "esbuild a11y-widget.v0.3.js --bundle --minify --sourcemap --format=esm --outfile=dist/index.js",
    "serve": "python3 -m http.server 5173"
  },
  "devDependencies": {
    "esbuild": "^0.25.10"
  }
}
